<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <ImageView
        android:id="@+id/ulf_row_view_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        app:srcCompat="@drawable/unknown" />

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ulf_row_view_file_name"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="TextView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/ulf_row_view_file_size"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="TextView" />

            <TextView
                android:id="@+id/ulf_row_view_file_path"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:singleLine="true"
                android:ellipsize="end"
                android:paddingLeft="3dp"
                android:text="TextView" />
        </LinearLayout>
        <ProgressBar
            android:id="@+id/ulf_row_view_progressbar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="15dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/ulf_row_view_bt"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/play" />
    </LinearLayout>

</LinearLayout>