<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/usuallink_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/computer" />
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/usuallink_tv_name"
            android:paddingTop="8dp"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="隔壁老王的远程电脑" />
        <TextView
            android:id="@+id/usuallink_tv_address"
            android:paddingLeft="10dp"
            android:paddingTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10.215.54.243:8019" />
    </LinearLayout>


    <Button
        android:id="@+id/usuallink_bt"
        android:layout_gravity="center_vertical"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:focusable="false"
        android:text="连接" />

</LinearLayout>